// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guest{
  id               Int          @id @default(autoincrement())
  name             String
  password         String
  email            String       @unique
  bookings         Bookings[]
  created_at       DateTime     @default(now())
}

model Room{
  id               Int          @id @default(autoincrement())
  quantity         Int
  price            Int 
  bookings         Bookings[]   
  roomType         RoomType 
}

model Bookings{
  id               Int          @id @default(autoincrement())
  created_at       DateTime     @default(now())
  date_check_in    DateTime
  date_check_out   DateTime
  number_of_guests Int
  guest_id         Int          
  guest            Guest        @relation(fields: [guest_id], references: [id])
  room_id          Int
  room             Room         @relation(fields: [room_id], references: [id]) 
}

enum RoomType{
  SIMPLE_SINGLE
  PREMIUM_SINGLE
  SIMPLE_COUPLE
  PREMIUM_COUPLE
}